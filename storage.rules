rules_version = '2';

// Craft rules based on data in your Firestore database
// Allow authenticated users to upload and manage their own files
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their own user folder
    match /users/{userId}/audio/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/videos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public files
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Validate file size and type for uploads
    match /users/{userId}/{mediaType}/{allPaths=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size <= 50 * 1024 * 1024  // 50MB limit
                   && (mediaType == 'audio' ? request.resource.contentType.matches('audio/.*') 
                                            : request.resource.contentType.matches('video/.*'));
    }
  }
}
